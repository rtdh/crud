
<%- include('../partials/header') %>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<table id="example" class="table table-striped table-bordered">
					<thead class="thead-light">
						<tr>
							<td>SlNo</td>
							<td>Blog Name</td>
							<td>Description</td>
							<td>Image</td>
						</tr>
					</thead>
					<tbody>
					<% blogs.forEach(function(blog,index){ %>
						<tr>
							<td><%= index +1 %></td>
							<td><%= blog.title %></td>
							<td><%= blog.body %></td>
							
							<td><img src="<%= blog.image %>" style="width: 100px; height: 100px"></td>
						</tr>
					<% }) %>
					</tbody>
				</table>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>